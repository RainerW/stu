        // to the Refs where no builder exist.
        if (thisBuilder == null)
        {
          getOrCreateList(${privateListPrefix}${verb}Map, dataSet).add(ref);
        }
        if (otherBuilder == null) 
        {
          getOrCreateList(ref.${privateListPrefix}${remoteVerb}Map, dataSet).add(this);
        }
      }
    }
    return this;
  }

